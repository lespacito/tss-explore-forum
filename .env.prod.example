# --- SERVER CONFIG ---
DOMAIN_NAME=example.com

# --- DATABASE ---
# Note: POSTGRES_ variables are used by the docker-compose to initialize the DB container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_please_change
POSTGRES_DB=tanstack_db_forum_prod

# Connect string for the app (constructed automatically in compose.yaml usually, but good to have reference)
# DATABASE_URL=postgresql://postgres:secure_password_please_change@postgres:5432/tanstack_db_forum_prod

# --- BETTER AUTH ---
BETTER_AUTH_SECRET=your_generated_secure_secret_here
BETTER_AUTH_URL=https://example.com # Must match your domain

# --- GITHUB OAUTH ---
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# --- ARCJET SECURITY ---
ARCJET_KEY=your_arcjet_key

# --- EMAIL (SMTP) ---
# For production, use a real SMTP service like Resend, SendGrid, AWS SES, etc.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_smtp_password
SMTP_FROM="TanStack Forum <noreply@example.com>"
